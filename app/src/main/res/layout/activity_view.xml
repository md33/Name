<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.md.givename.Find">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="280dp"
        android:layout_marginRight="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Нэр"
        android:id="@+id/hvis"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginStart="33dp"
        android:layout_alignTop="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:layout_marginTop="145dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Төрөл"
        android:id="@+id/ner"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_alignTop="@+id/hvis"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Тайлбар"
        android:id="@+id/torol"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginRight="40dp"
        android:layout_below="@+id/hvis"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="63dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Тайлбаргүй байна"
        android:id="@+id/comment"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginRight="40dp"
        android:layout_below="@+id/torol"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Төрөл"
        android:id="@+id/type"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/ner"
        android:layout_marginRight="-15dp"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Төрөл"
        android:id="@+id/gender"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_below="@+id/hvis"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="35dp" />

</RelativeLayout>
